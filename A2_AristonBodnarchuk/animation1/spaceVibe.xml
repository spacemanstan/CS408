<?xml version="1.0" encoding="UTF-8"?>

<!-- 
    animations rendered at 1280 x 720
    rotation is in degrees

    keyframes of same ID must be in ascending order
    keyframes must have an associated object

    objects can be type obj, img, box, cube, sphere
 -->

<animation>
    <object id="rocket" type="obj">/animation1/spaceShip/spaceShip.obj</object>
    <keyframe id="rocket" frame="0">
        <position x="-640" y="360" z="0" />
        <rotation x="0" y="0" z="-90" />
        <scale x="100" y="100" z="100" />
    </keyframe>
    <keyframe id="rocket" frame="120">
        <position x="1080" y="360" z="0" />
        <rotation x="180" y="0" z="-90" />
        <scale x="100" y="100" z="100" />
